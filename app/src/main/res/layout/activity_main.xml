<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:layout_margin="16dp">
    <EditText
            android:id="@+id/send_message_view"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/send_message_button"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:text="Send Message"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/receive_message_view"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:hint="Message Response"/>
    <TextView
            android:layout_margin="8dp"
            android:id="@+id/response_from_server_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Server Response"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:id="@+id/connect_server"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:text="Connect"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/disconnect_server"
                android:layout_width="0dp"
                android:text="Disconnect"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>